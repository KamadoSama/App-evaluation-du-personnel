<body>
<div class="wrapper">
    <!-- Sidebar  -->
     <!-- Sidebar Holder -->
        <nav id="sidebar">
            <div class="sidebar-header">
                <h3>Evaluation du personnel</h3>
            </div>

            <ul class="list-unstyled components">
           
              <li class="active">
                <a href="/dashboard"  aria-expanded="false">Dashboard</a>
              
              </li>
              <li>
                  <a href="/evaluation/">Evaluation</a>
                  <a href="/user/listEmploye" >Liste des employés</a>
                  
              </li>
              <li>
                  <a href="/register">Ajouter un employé</a>
              </li>   
            </ul>

        <ul class="list-unstyled CTAs">
            <li>
              <form action="/user/logout" method="POST">
                <button type="submit" class="btn btn-light">
                  <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-box-arrow-in-left" viewBox="0 0 16 16">
                    <path fill-rule="evenodd" d="M10 3.5a.5.5 0 0 0-.5-.5h-8a.5.5 0 0 0-.5.5v9a.5.5 0 0 0 .5.5h8a.5.5 0 0 0 .5-.5v-2a.5.5 0 0 1 1 0v2A1.5 1.5 0 0 1 9.5 14h-8A1.5 1.5 0 0 1 0 12.5v-9A1.5 1.5 0 0 1 1.5 2h8A1.5 1.5 0 0 1 11 3.5v2a.5.5 0 0 1-1 0v-2z"/>
                    <path fill-rule="evenodd" d="M4.146 8.354a.5.5 0 0 1 0-.708l3-3a.5.5 0 1 1 .708.708L5.707 7.5H14.5a.5.5 0 0 1 0 1H5.707l2.147 2.146a.5.5 0 0 1-.708.708l-3-3z"/>
                  </svg>
                  Se deconnecter
                </button>
              </form>
            </li>
            
        </ul>
    </nav>

    <!-- Page Content  -->
    <div id="content">

      <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <div class="container-fluid" id="heade-name">

          <button type="button" id="sidebarCollapse" class="btn btn-info">
            <i class="fas fa-align-left"></i>
                    
          </button>
                

          <div class="mx-auto" >
            <h1>Evaluation du personnel</h1>
          </div>
        </div>
      </nav>
      <section class="text-center">
        <!-- Background image -->
        <div class="p-5 bg-image" style="
              background-image: url('https://mdbootstrap.com/img/new/textures/full/171.jpg');
              height: 300px;
              "></div>
        <!-- Background image -->
      
        <div class="w-50 card mx-auto mb-2 shadow-lg" style="
              margin-top: -200px;
              background: hsla(0, 0%, 100%, 0.8);
              backdrop-filter: blur(30px);
              ">
          <div class="card-body py-5 px-md-5">
      
            <div class="row d-flex justify-content-center">
              <div class="col-lg-10">
                <h2 class="fw-bold mb-5">Enregistrer les utilisateurs</h2>
                <% if(locals.register){%>
                  <div class="alert alert-success text-center">
                     <%= register %>
                  </div>
                <%}%>
                <form action="/user/register" method="post">
                    <div class="row">
                        <div class="col-md-6 mb-4">
                          <div class="form-outline">
                            <input name="nom" type="text" id="form3Example1" class="form-control"  placeholder="Nom" />
                            
                          </div>
                        </div>
                        <div class="col-md-6 mb-4">
                          <div class="form-outline">
                            <input name="prenom" type="text" id="form3Example2" class="form-control"  placeholder="Prenom"/>
                            
                          </div>
                        </div>
                    </div>  
                    
                    <div class="form-outline mb-4">
                        <input  type="text" name="identifiant" id="form3Example3" class="form-control" placeholder="Nom d'utilisateur" />    
                    </div>
                   
                    <div class="form-outline mb-4">
                        <select name="rule" class="form-select" aria-label="Default select example">
                            <option selected>Role</option>
                            <option value="Administrateur">Administrateur</option>
                            <option value="Employe">Employé</option>
                        </select>
                    </div>
                    <div class="form-outline mb-4">
                        <input type="password" name="password" id="form3Example4" class="form-control" placeholder="Mot de passe"/>
                    </div>
                
                    <!-- Submit button -->
                    <button type="submit" class="btn btn-primary btn-block mb-4">
                        Enregistrer
                    </button>
      
                </form>
              </div>
            </div>
          </div>
        </div>
      </section>
  
    </div>
</div>

